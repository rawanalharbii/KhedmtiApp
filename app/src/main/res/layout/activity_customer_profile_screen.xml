

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dcd9d9"
        android:orientation="vertical"
        tools:context="android.KhedmtiApp.CustomerProfileScreen">

        <LinearLayout
            android:id="@+id/textView_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6da5f9"
            android:gravity="center"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <SearchView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/searchView" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="4"
                android:gravity="center"
                android:paddingLeft="60dp"
                android:text="خـدمتي"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="14dp"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="list"
                android:src="@drawable/list" />


        </LinearLayout>

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12" >



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/abc_action_bar_default_height_material"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="إبلاغ"
                        android:id="@+id/textView5"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="63dp"
                        android:textSize="30dp"
                        android:background="#a9a4a4" />

                    <ImageView
                        android:layout_width="@dimen/abc_action_bar_default_height_material"
                        android:layout_height="@dimen/abc_action_bar_default_height_material"
                        android:id="@+id/imageView3"
                        android:src="@drawable/spam"
                        android:layout_below="@+id/textView5"
                        android:layout_alignLeft="@+id/textView5"
                        android:layout_alignStart="@+id/textView5" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView4"
                        android:src="@drawable/profilepic"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:layout_above="@+id/imageView3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="روان الحربي"
                        android:id="@+id/textView6"
                        android:layout_below="@+id/imageView4"
                        android:layout_centerHorizontal="true"
                        android:textColor="#5e89fc"
                        android:textSize="@dimen/abc_action_bar_progress_bar_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="جدة"
                        android:id="@+id/textView7"
                        android:layout_below="@+id/textView6"
                        android:layout_centerHorizontal="true"
                        android:textSize="30dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/textView7"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="#fdfcfc"
                        android:layout_alignRight="@+id/textView7"
                        android:layout_alignEnd="@+id/textView7"
                        android:id="@+id/relativeLayout2">

                        <CalendarView
                            android:layout_width="190dp"
                            android:layout_height="200dp"
                            android:id="@+id/calendarView"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                    </RelativeLayout>

                    <Button
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="تعديل الملف"
                        android:id="@+id/button3"
                        android:layout_gravity="center_horizontal"
                        android:background="#6da5f9"
                        android:layout_alignTop="@+id/relativeLayout2"
                        android:layout_toEndOf="@+id/textView6"
                        android:layout_marginTop="59dp"
                        android:layout_alignLeft="@+id/button2"
                        android:layout_alignStart="@+id/button2" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="طلباتي"
                        android:id="@+id/button2"
                        android:layout_gravity="center_horizontal"
                        android:background="#6da5f9"
                        android:layout_alignTop="@+id/relativeLayout2"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>



        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="horizontal">



            <LinearLayout
                android:id="@+id/home1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:background="#c2bdbd"
                android:gravity="center"
                android:onClick="GoHome">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/hom" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/notifications1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:background="#c2bdbd"
                android:gravity="center"
                android:onClick="GoNotifications">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/noti" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/profile1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:background="#c2bdbd"
                android:gravity="center"
                android:onClick="GoProfile">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/pro" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>